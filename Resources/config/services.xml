<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="buzz.client_class">Buzz\Client\Curl</parameter>
        <parameter key="vebra.token_storage_class">YDD\Vebra\TokenStorage\File</parameter>
    </parameters>

    <services>
        <service id="buzz.client" class="%buzz.client_class%" />
        <service id="buzz.message_factory" class="Buzz\Message\Factory\Factory" />

        <service id="vebra.token_storage" class="%vebra.token_storage_class%">
            <argument>%vebra.username%</argument>
            <argument>%vebra.token_directory%</argument>
        </service>
        <service id="vebra.api" class="YDD\Vebra\API">
            <argument>%vebra.data_feed_id%</argument>
            <argument>%vebra.username%</argument>
            <argument>%vebra.password%</argument>
            <argument type="service" id="vebra.token_storage" />
            <argument type="service" id="buzz.client" />
            <argument type="service" id="buzz.message_factory" />
        </service>
    </services>
</container>
